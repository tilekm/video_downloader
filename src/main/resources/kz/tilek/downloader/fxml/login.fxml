<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0" spacing="5.0" styleClass="bg-100" stylesheets="@../styles/color.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kz.tilek.downloader.gui.login.LoginController">
    <children>
      <VBox alignment="CENTER">
         <children>
              <Text fill="#fae8ff" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="accent-200" text="Enter your">
                  <font>
                      <Font name="JetBrains Mono ExtraBold" size="30.0" />
                  </font>
              </Text>
            <Text fill="#fae8ff" layoutX="10.0" layoutY="117.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="accent-200" text="login and password">
               <font>
                  <Font name="JetBrains Mono ExtraBold" size="30.0" />
               </font>
            </Text>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER_LEFT" minHeight="125.0" minWidth="400.0" prefHeight="133.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Label fx:id="error" text="Please check your login or password!" textFill="RED" visible="false">
               <font>
                  <Font name="JetBrains Mono Regular" size="12.0" />
               </font>
            </Label>
              <TextField fx:id="email" promptText="Login" styleClass="bg-300, accent-200" stylesheets="@../styles/color.css">
               <font>
                  <Font name="JetBrains Mono ExtraBold" size="12.0" />
               </font></TextField>
              <PasswordField fx:id="password" promptText="Password" styleClass="bg-300, accent-200" stylesheets="@../styles/color.css">
               <font>
                  <Font name="JetBrains Mono ExtraBold" size="12.0" />
               </font></PasswordField>
              <CheckBox fx:id="rememberMe" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" styleClass="accent-200" stylesheets="@../styles/color.css" text="Remember me" textAlignment="CENTER" wrapText="true">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
               <font>
                  <Font name="JetBrains Mono ExtraBold" size="14.0" />
               </font>
              </CheckBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" spacing="50.0">
         <children>
              <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonHandler" stylesheets="@../styles/color.css" text="Sign in" textAlignment="CENTER">
               <font>
                  <Font name="JetBrains Mono ExtraBold" size="15.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <styleClass>
                  <String fx:value="main-btn" />
                  <String fx:value="main-btn-accept" />
               </styleClass>
              </Button>
              <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterButtonHandler" styleClass="main-btn" stylesheets="@../styles/color.css" text="Create new account">
               <font>
                  <Font name="JetBrains Mono ExtraBold" size="15.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="20.0" top="15.0" />
         </VBox.margin>
      </HBox>
    </children>
</VBox>
